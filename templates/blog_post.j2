<header>
  <img src="{{ site.url }}/media/images/blog/covers/{{ post.cover }}" alt="{{ post.title }}" class="w-full object-cover object-center rounded-lg shadow-lg mb-5" />

  <h1 class="text-4xl font-semibold">{{ post.title }}</h1>

  <div class="my-3">
      {% for tag in post.tags %}
          <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
              {{ tag }}
          </span>
      {% endfor %}
      <span class="text-gray-400">
          Publi√© le {{ post.publish_date_medium }}
      </span>
  </div>
</header>

<article>
  {{ post.body }}
</article>
