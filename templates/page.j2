{% if page.permalink | length %}
  <header>
    {% if page.cover %}
      <img width="100%" src="{{ site.url }}/media/images/pages/{{ page.cover }}" alt="{{ page.cover_alt }}">
    {% endif %}
    {% if page.title %}
      <h1 class="text-4xl font-semibold mb-4">
        {{ page.title }}
      </h1>
    {% endif %}
    {% if page.summary %}
      <p class="subtitle">
        {{ page.summary }}
      </p>
    {% endif %}
  </header>

  <section>
    {{ page.body }}
  </section>
{% endif %}

{% if page.title == "home" %}
  <h1 class="text-4xl font-semibold">Publié récemment</h1>

  {% if posts %}
    <h2 class="text-2xl font-semibold mt-8">Articles du blog</h2>    
    {% for post in posts | reverse %}
      <article class="p-5 rounded-lg bg-gray-900 my-8">
        <h2 class="text-2xl font-semibold">
          <a href="/blog/{{ post.slug }}/">
            {{ post.title }}
          </a>
        </h2>
        <div class="my-3">
          {% for tag in post.tags %}
            <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
              {{ tag }}
            </span>
          {% endfor %}
          <span class="text-gray-400">
            Publié le {{ post.publish_date }}
          </span>
        </div>
        <p>
            {{ post.body }}
        </p>
      </article>
    {% endfor %}
  {% endif %}

  {% if links %}
    <h2 class="text-2xl font-semibold mt-8">Liens</h2>
    {% for link in links %}
      <article class="p-5 rounded-lg bg-gray-900 my-8">
        <h2 class="text-2xl font-semibold">
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
        </h2>
        <p>
          {{ link.description }}
        </p>
      </article>
    {% endfor %}
  {% endif %}

  {% if podcasts %}
    <h2 class="text-2xl font-semibold mt-8">Podcasts</h2>
    {% for podcast in podcasts %}
      <article class="p-5 rounded-lg bg-gray-900 my-8">
        <h2 class="text-2xl font-semibold">
          <a href="{{ podcast.url }}">
            {{ podcast.title }}
          </a>
        </h2>
        <p>
          {{ podcast.description }}
        </p>
      </article>
    {% endfor %}
  {% endif %}
{% endif %}
