
<h1 class="text-4xl font-semibold">Apprendre</h1>

{% for category in table_of_contents | sort(attribute="id") %}

    <h2 class="text-2xl font-semibold my-7 border-b border-gray-400">{{ category.name }}</h2>

    {% for module in category.modules | sort(attribute="id") %}

        <div class="bg-gray-900 rounded-lg my-6 flex flex-row">
            {% if module.logo %}
                <div class="hidden md:flex md:flex-none rounded-l-lg">
                    <img src="/media/images/apprendre/{{ module.path }}/{{ module.logo }}" alt="{{ module.name }}" class="h-32 rounded-l-lg aspect-square object-fill">
                </div>
            {% endif %}

            <div class="p-4">
                <a href="{{ module.path }}" class="text-blue-500 hover:underline">
                    <h3 class="text-xl font-semibold">{{ module.name }}</h3>
                </a>
                <p>{{ module.description }}</p>
            </div>
        </div>

    {% endfor %}

{% endfor %}
 