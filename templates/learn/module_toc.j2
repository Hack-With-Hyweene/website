<h1 class="text-4xl font-semibold">{{ module.name }}</h1>

{% for page in pages %}

    <h2>{{ page.title }}</h2>

    <p>{{ page.summary }}</p>
    <p>Publié le {{ page.publish_date_medium }} {% if page.update_date_medium %}- Mis à jour le {{ page.update_date_medium }}{% endif %}</p>
    <a href="/apprendre/{{ module.slug }}/{{ page.slug }}">Lire la suite</a>
{% endfor %}
