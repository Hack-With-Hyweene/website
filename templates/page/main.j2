{% extends "main.j2" %}

{% block meta_keywords %}
    <meta name="keywords" content="{{ site.keywords | join(', ') }}, {{ page.tags | join(', ') }}">
{% endblock meta_keywords %}

{% block content %}
    {% if page.cover %}
        <img class="cover" src="/media/images/pages/{{ page.cover }}" alt="page cover image">
    {% endif %}

    {% if page.title %}
        <h1>
            {{ page.title }}
        </h1>
    {% endif %}

    <hr />

    {{ page.body }}
{% endblock %}
