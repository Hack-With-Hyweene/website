{% extends "main.j2" %}

{% block meta_keywords %}
    <meta name="keywords" content="{{ site.keywords | join(', ') }}, Liens, {{ link.tags | join(', ')}}">
{% endblock meta_keywords %}

{% block content %}
    <h1>{{ link.title }}</h1>

    <p class="subtitle">Original Link : <a href="{{ link.url }}" target="_blank">{{ link.url }}</a></p>

    <hr />

    {{ link.body }}
{% endblock %}
