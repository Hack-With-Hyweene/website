<h1 class="text-4xl font-semibold">Publié récemment</h1>

{% if posts %}
  <h2 class="text-2xl font-semibold mt-8">Articles du blog</h2>
  
  {% for post in posts | reverse %}
    <article class="p-5 rounded-lg bg-gray-900 my-8">

      <h2 class="text-2xl font-semibold">
        <a href="{{ site.url }}/blog/{{ post.slug }}/">
          {{ post.title }}
        </a>
      </h2>

      <div class="my-3 flex flex-wrap">
        {% for tag in post.tags %}
          <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 mb-2">
            {{ tag }}
          </span>
        {% endfor %}
        <span class="text-gray-400">
          Publié le {{ post.publish_date_medium }}
        </span>
      </div>

      <p>
        {{ post.summary }}
      </p>
    </article>
  {% endfor %}

{% endif %}

{% if links %}
  <h2 class="text-2xl font-semibold mt-8">Liens</h2>

  {% for link in links %}
    <article class="p-5 rounded-lg bg-gray-900 my-8">

      <h2 class="text-2xl font-semibold">
        <a href="{{ link.url }}">
          {{ link.title }}
        </a>
      </h2>

      <div class="my-3">
        <span class="text-gray-400">
          Publié le {{ link.publish_date_medium }}
        </span>
      </div>

      <p>
        {{ link.description }}
      </p>

    </article>
  {% endfor %}
  
{% endif %}
