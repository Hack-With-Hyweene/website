<h1 class="text-4xl font-semibold">Publié récemment</h1>

{% if posts %}
  <h2 class="text-2xl font-semibold mt-8 border-b border-gray-400">Articles du blog</h2>
  
  {% for post in posts[:5] | reverse %}
    <article class="p-5 rounded-xl bg-gray-900 my-8">

      <h2 class="text-2xl font-semibold">
        <a href="/blog/{{ post.slug }}/" class="hover:text-blue-400 transition-colors duration-300">
          {{ post.title }}
        </a>
      </h2>

      <p class="my-3 text-gray-400">
          {% if post.category %}<span class="bg-gray-600 text-gray-100 text-sm font-medium me-2 px-2.5 py-0.5 rounded mb-2">{{ post.category }}</span>{% endif %} Publié le {{ post.publish_date_medium }}
      </p>

      <div class="my-3 flex flex-wrap">
          {% for tag in post.tags %}
              <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 mb-2">
                  {{ tag }}
              </span>
          {% endfor %}
      </div>

      <hr />

      <div class="mt-3">
        <p>
          {{ post.summary }}
        </p>
      </div>
    </article>
  {% endfor %}

{% endif %}

{% if links %}
  <h2 class="text-2xl font-semibold mt-8 border-b border-gray-400">Liens</h2>

  {% for link in links[:5] | reverse %}
    <article class="p-5 rounded-xl bg-gray-900 my-8">

      <h2 class="text-2xl font-semibold">
        <a href="{{ link.url }}" class="hover:text-blue-400 transition-colors duration-300">
          {{ link.title }}
        </a>
      </h2>

      <div class="my-3">
        <span class="text-gray-400">
          Publié le {{ link.publish_date_medium }}
        </span>
      </div>

      <div class="my-3 flex flex-wrap">
        {% for tag in link.tags %}
            <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 mb-2">
                {{ tag }}
            </span>
        {% endfor %}
      </div>

      <hr />

      <div class="mt-3">
        {{ link.body }}
      </div>

    </article>
  {% endfor %}
  
{% endif %}
