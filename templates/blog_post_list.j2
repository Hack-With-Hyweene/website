<h1 class="text-4xl font-semibold">Blog</h1>

{% for post in all_posts | reverse %}
    <section class="p-5 rounded-lg bg-gray-900 my-8">
        <h2 class="text-2xl font-semibold">
            <a href="/blog/{{ post.slug }}/" class="hover:text-blue-400 transition-colors duration-300">
                {{ post.title }}
            </a>
        </h2>

        <p class="my-3 text-gray-400">
            Publi√© le {{ post.publish_date_medium }}
        </p>

        <div class="my-3 flex flex-wrap">
            {% for tag in post.tags %}
                <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 mb-2">
                    {{ tag }}
                </span>
            {% endfor %}
        </div>

        <hr />

        <div class="mt-3">
            <a href="/blog/{{ post.slug }}/"> 
                <p>
                    {{ post.summary }}
                </p>
            </a>
        </div>
    </section>
{% endfor %}
