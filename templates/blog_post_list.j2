<h1 class="text-4xl font-semibold">Blog</h1>

{% for post in all_posts %}
    <section class="p-5 rounded-lg bg-gray-900 my-8">
        <h2 class="text-2xl font-semibold">
            <a href="{{ site.url }}/blog/{{ post.slug }}/" class="hover:text-sky-400 transition-colors duration-300">
                {{ post.title }}
            </a>
        </h2>
        <div class="my-3">
            {% for tag in post.tags %}
                <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                    {{ tag }}
                </span>
            {% endfor %}
            <span class="text-gray-400">
                Publi√© le {{ post.publish_date_medium }}
            </span>
        </div>
        <p>
            <a href="{{ site.url }}/blog/{{ post.slug }}/">
                {{ post.summary }}
            </a>
        </p>
    </section>
{% endfor %}
