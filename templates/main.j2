<!DOCTYPE html>
<html lang="fr-FR" prefix="og: http://ogp.me/ns#" >
    <head>
        <!-- Favicon -->
        <link href="{{ site.url }}/static/img/cl-logo.svg" rel="icon" />


        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=5.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="format-detection" content="telephone=no">

        <meta name="author" content="{{ site.author }}">
        <meta name="webmaster" content="{{ site.name }}">
        <meta name="language" content="{{ site.language }}">

        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
        <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
        <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">

        <meta name="revisit-after" content="1 days">
        <meta name="expires" content="never">
        <meta name="rating" content="General">
        <meta name="apple-mobile-web-app-capable" content="yes">

        <meta name="identifier-URL" content="{{ site.url }}">

        <link rel="alternate" type="application/rss+xml" title="{{ site.name }} - RSS du Blog" href="{{ site.url }}/blog/feed.xml">
        <link rel="alternate" type="application/rss+xml" title="{{ site.name }} - RSS des Liens" href="{{ site.url }}/links/feed.xml">

        {% if page_title %}
            <title>{{ page_title }} - {{ site.name }}</title>
            <meta name="title" content="{{ page_title }} - {{ site.name }}">
        {% else %}
            <title>{{ site.name }}</title>
            <meta name="title" content="{{ site.name }}">
        {% endif %}

        {% if page %}
            {% if page.permalink %}
                <link rel="canonical" href="{{ site.url }}/{{ page.permalink }}/">
            {% endif %}
            {% if page.summary %}
                <meta name="description" content="{{ page.summary }}">
            {% endif %}
        {% elif post %}
            <link rel="canonical" href="{{ site.url }}/blog/{{ post.slug }}/">
            <meta name="description" content="{{ post.summary }}">
        {% elif all_posts %}
            <link rel="canonical" href="{{ site.url }}/blog/">
            <meta name="title" content="Blog - {{ site.name }}">
        {% else %}
            <link rel="canonical" href="{{ site.url }}/">
        {% endif %}

        {% block prismCss %}
        {% endblock prismCss %}

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-S4T0SNK38Q"></script>
        <script>
            window.dataLayer = window.dataLayer || []; function gtag() { dataLayer.push(arguments); } gtag('js', new Date()); gtag('config', 'G-S4T0SNK38Q');
        </script>

        {% block meta_keywords %}
            <meta name="keywords" content="{{ site.keywords | join(', ') }}">
        {% endblock meta_keywords %}

        {% include "includes/style.j2" %}
    </head>
    <body>
        <header>
            <h1>
                <a href="/">Hack with Hyweene</a>
            </h1>
        </header>
        <nav>
            <a href="/blog/">Blog</a>
            &bull;
            <a href="/liens/">Liens</a>
            &bull;
            <a href="/apprendre/">Apprendre</a>
            &bull;
            <a href="/cv/">CV</a>
        </nav>

        <main>
            {% block content %}
                <h1>Default content block</h1> 
                <p>Default content block</p>
            {% endblock content %}
        </main>
            
        <footer>
            <nav>
                <a href="/a-propos/">A Propos</a>
                &bull;
                <a href="/mentions-legales/">Mentions LÃ©gales</a>
                &bull;
                <a href="{{ site.url }}">{{ site.url }}</a>
            </nav>
        </footer>
    </body>
</html>
